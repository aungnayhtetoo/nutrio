<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.FXMLDocumentController">
    <children>
      <BorderPane prefHeight="600.0" prefWidth="600.0">
         <center>
            <VBox prefHeight="330.0" prefWidth="329.0" BorderPane.alignment="CENTER">
               <children>
                  <AnchorPane prefHeight="200.0" prefWidth="200.0">
                     <children>
                        <Button fx:id="createRecipeBtn" layoutX="30.0" layoutY="32.0" mnemonicParsing="false" onAction="#createRecipe" prefHeight="25.0" prefWidth="105.0" text="Add a Recipe" />
                     </children>
                  </AnchorPane>
                  <AnchorPane prefHeight="200.0" prefWidth="200.0">
                     <children>
                        <Button fx:id="updateRecipeBtn" layoutX="30.0" layoutY="32.0" mnemonicParsing="false" onAction="#updateRecipe" prefHeight="25.0" prefWidth="105.0" text="Update a Recipe" />
                     </children>
                  </AnchorPane>
                  <AnchorPane prefHeight="200.0" prefWidth="200.0">
                     <children>
                        <Button fx:id="deleteRecipeBtn" layoutX="30.0" layoutY="32.0" mnemonicParsing="false" onAction="#deleteRecipe" prefHeight="25.0" prefWidth="105.0" text="Delete a Recipe" />
                     </children>
                  </AnchorPane>
                  <AnchorPane prefHeight="200.0" prefWidth="200.0">
                     <children>
                        <Button fx:id="readRecipeBtn" layoutX="30.0" layoutY="32.0" mnemonicParsing="false" onAction="#readAllRecipe" prefHeight="25.0" prefWidth="105.0" text="List All Recipe" />
                     </children>
                  </AnchorPane>
                  <AnchorPane prefHeight="200.0" prefWidth="200.0">
                     <children>
                        <Button fx:id="readRecipeCustomBtn1" layoutX="30.0" layoutY="32.0" mnemonicParsing="false" onAction="#findRecipeLessThanCalories" prefHeight="25.0" prefWidth="221.0" text="List Recipe With Calories Less Than" />
                        <Button fx:id="readRecipeCustomBtn2" layoutX="273.0" layoutY="33.0" mnemonicParsing="false" onAction="#findRecipeStringContain" prefHeight="25.0" prefWidth="240.0" text="List Recipe That Include" />
                     </children>
                  </AnchorPane>
               </children>
            </VBox>
         </center>
         <top>
            <AnchorPane prefHeight="88.0" prefWidth="600.0" BorderPane.alignment="CENTER">
               <children>
                  <Label layoutX="21.0" layoutY="18.0" prefHeight="17.0" prefWidth="247.0" text="Recipe Editor" textFill="#547aab">
                     <font>
                        <Font name="SansSerif Regular" size="36.0" />
                     </font>
                  </Label>
                    <Button fx:id="button" layoutX="531.0" layoutY="30.0" onAction="#handleButtonAction" text="Click Me!" />
                    <Label fx:id="label" layoutX="463.0" layoutY="36.0" minHeight="16" minWidth="69" />
               </children>
            </AnchorPane>
         </top>
         <bottom>
            <ButtonBar prefHeight="65.0" prefWidth="600.0" BorderPane.alignment="CENTER">
              <buttons>
                  <AnchorPane prefHeight="65.0" prefWidth="600.0">
                     <children>
                      <Button layoutX="14.0" layoutY="20.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="65.0" text="Back" />
                     </children>
                  </AnchorPane>
              </buttons>
            </ButtonBar>
         </bottom>
      </BorderPane>
    </children>
</AnchorPane>
